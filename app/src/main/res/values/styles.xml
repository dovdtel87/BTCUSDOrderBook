<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="text_style_1" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="text_style_2" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_style_3" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_4" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_subtitle" parent="@style/TextAppearance.AppCompat.Caption">
    </style>

</resources>
